<%- include('../layout/header'); %>

<div class="flex-grow bg-cover bg-center p-4" style="background-image: url('/images/playground.jpg');">
    <main class="container mx-auto md:my-8 lg:my-10 px-3 py-4">
        <div class="max-w-xl mx-auto bg-stone-50 rounded-lg drop-shadow-lg p-16">
            <h2 class="subtitle text-5xl">Continue your adventure.</h2>
            <p class="mt-2 mb-4">
                Log in to your account and reserve your stay today!
            </p>
            <form method="post">
                <div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Email address</label>
                        <input class="w-full block rounded-md border-0 ring-2 ring-inset ring-stone-300 focus:ring-2 focus:ring-inset focus:ring-lime-600 py-2 px-3" type="email" id="email" name="email" />
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Password</label>
                        <input class="w-full block rounded-md border-0 ring-2 ring-inset ring-stone-300 focus:ring-2 focus:ring-inset focus:ring-lime-600 py-2 px-3" type="password" id="password" name="password" />
                    </div>
                </div>
                <div class="mt-6 text-center">
                    <button type="submit" class="transition self-center text-xs lg:text-sm font-bold uppercase
                            bg-lime-600 hover:bg-lime-800
                            text-stone-50 hover:text-stone-100
                            drop-shadow-md rounded-md px-3 py-2">Login</button>
                </div>
            </form>
        </div>
    </main>
</div>

<%- include('../layout/footer'); %>