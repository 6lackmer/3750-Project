<%- include('./layout/header2'); %>

<div class="flex-grow bg-cover bg-center p-4" style="background-image: url('/images/sunset.jpg');">
    <main class="container mx-auto md:my-8 lg:my-10 px-3 py-4">
        <div class="max-w-5xl mx-auto bg-stone-50 rounded-lg drop-shadow px-10 py-8">
            <h2 class="subtitle text-5xl mb-8">Camp for your country.</h2>
            
            <div class="mb-3">
                <label class="block text-base text-stone-500">Date</label>
                <input class="w-full block border-2 rounded-md py-1 px-2" type="date" id="date" name="date" />
            </div>
            <div class="mb-3">
                <label class="block text-base text-stone-500">Nights</label>
                <input class="w-full block border-2 rounded-md py-1 px-2" type="number" id="date" name="date" />
            </div>
            <div class="mb-3">
                <label class="block text-base text-stone-500">RV Size</label>
                <select class="w-full block border-2 rounded-md py-2 px-3" type="date" id="date" name="date">
                    <option value=""></option>
                    <option value="">Compact</option>
                    <option value="">Standard</option>
                    <option value="">Large</option>
                    <option value="">Truck camper</option>
                </select>
            </div>
            <div class="mt-6 text-center">
                <button class="transition self-center text-xs lg:text-sm font-bold uppercase
                            bg-lime-600 hover:bg-lime-800
                            text-stone-50 hover:text-stone-100
                            drop-shadow-md rounded-md px-3 py-2">Make Reservation</button>
            </div>
        </div>
    </main>
</div>

<%- include('./layout/footer'); %>