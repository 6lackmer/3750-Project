<%- include('../layout/header'); %>

<div class="flex-grow bg-cover bg-center p-16" style="background-image: url('/images/rvs.jpg');">
    <main class="container mx-auto flex flex-row flex-nowrap justify-center">
        <div class="bg-stone-50 rounded-lg p-16">
            <h2 class="subtitle text-5xl">Join the Fam!</h2>
                <p class="mt-2 mb-4">
                    Create an account to unlock 24/7 online reservations and more.
                </p>
            <div class="flex flex-col md:flex-row flex-nowrap gap-12 ">
                <div class="xl:w-96">
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Email address</label>
                        <input class="w-full block border-2 rounded-md py-1 px-2" type="email" id="email" name="email" />
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Password</label>
                        <input class="w-full block border-2 rounded-md py-1 px-2" type="password" id="password" name="password" />
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Repeat password</label>
                        <input class="w-full block border-2 rounded-md py-1 px-2" type="password" id="password_repeat" name="password_repeat" />
                    </div>
                </div>
                <div class="xl:w-96">
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">First Name</label>
                        <input class="w-full block border-2 rounded-md py-1 px-2" type="text" id="first_name" name="first_name" />
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Last Name</label>
                        <input class="w-full block border-2 rounded-md py-1 px-2" type="text" id="first_name" name="first_name" />
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Military affiliation</label>
                        <select class="w-full block border-2 rounded-md py-2 px-3"  id="affiliation" name="affiliation">
                            <option value=""></option>
                            <option value="">Army</option>
                            <option value="">Navy</option>
                            <option value="">Coast Guard</option>
                            <option value="">Marines</option>
                            <option value="">Air Force</option>
                            <option value="">Area 51</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="block text-base text-stone-500">Status</label>
                        <select class="w-full block border-2 rounded-md py-2 px-3" id="status" name="status">
                            <option value=""></option>
                            <option value="">Active duty</option>
                            <option value="">Veteran</option>
                            <option value="">Dishonorably discharged</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mt-6 text-center">
                <button class="transition self-center text-xs lg:text-sm font-bold uppercase
                            bg-lime-600 hover:bg-lime-800
                            text-stone-50 hover:text-stone-100
                            drop-shadow-md rounded-md px-3 py-2">Register Account</button>
                <p class="mt-2">Already have an account? <a class="text-yellow-500 underline hover:text-yellow-700" href="/login">Log in here!</a></p>
            </div>
        </div>
    </main>
</div>


<%- include('../layout/footer'); %>